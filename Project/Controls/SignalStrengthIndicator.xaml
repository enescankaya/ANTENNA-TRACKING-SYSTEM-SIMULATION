<UserControl x:Class="Project.Controls.SignalStrengthIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" Width="80">
    <Border Background="#80000000" 
            CornerRadius="10"
            BorderBrush="#40FFFFFF"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Signal Strength Bar -->
            <Border Margin="10,10,10,5" 
                    Background="#20FFFFFF" 
                    CornerRadius="5">
                <Grid x:Name="SignalContainer" 
                      ClipToBounds="True">
                    <Rectangle x:Name="SignalFill"
                             VerticalAlignment="Bottom"
                             Height="0">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Color="#FF0000" Offset="0"/>
                                <GradientStop Color="#FFFF00" Offset="0.5"/>
                                <GradientStop Color="#00FF00" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                        <Rectangle.Effect>
                            <DropShadowEffect Color="#00A0FF"
                                            BlurRadius="15"
                                            ShadowDepth="0"/>
                        </Rectangle.Effect>
                    </Rectangle>
                </Grid>
            </Border>

            <!-- Value Display -->
            <StackPanel Grid.Row="1" 
                        Margin="5,0,5,10" 
                        HorizontalAlignment="Center">
                <TextBlock x:Name="SignalValue"
                          Text="0 dBm"
                          FontWeight="Bold"
                          FontSize="14"
                          HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SignalFill, Path=Height}" Value="0">
                                    <Setter Property="Foreground" Value="#FF0000"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Foreground" Value="#00FF00"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock x:Name="SnrValue"
                          Text="SNR: 0 dB"
                          Foreground="#80FFFFFF"
                          FontSize="12"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
