<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WindowsPresentation="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="RSSI Antenna Tracker" Height="800" Width="1200" Background="#FF1E1E1E" Loaded="MainWindow_Loaded">
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF444444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF666666"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF333333"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Map Section -->
        <Border Grid.Column="0" Background="#FF2D2D2D" Margin="10" CornerRadius="5">
            <Grid>
                <WindowsPresentation:GMapControl x:Name="MapControl" 
                                               Margin="5"
                                               MinZoom="2" 
                                               MaxZoom="17" 
                                               Zoom="13"
                                               CanDragMap="True"
                                               MouseWheelZoomType="MousePositionAndCenter"
                                               MouseWheelZoomEnabled="True"
                                               MouseDoubleClick="MapControl_MouseDoubleClick"
                                               MouseLeftButtonDown="MapControl_MouseLeftButtonDown"
                                               MouseLeftButtonUp="MapControl_MouseLeftButtonUp"
                                               MouseMove="MapControl_MouseMove"
                                               MouseWheel="MapControl_MouseWheel"
                                               ClipToBounds="True"
                                               Panel.ZIndex="0"/>
                <Canvas x:Name="MapCanvas" 
                        Background="Transparent" 
                        Panel.ZIndex="1"
                        IsHitTestVisible="False">
                    <!-- Radar Sweep -->
                    <Path x:Name="RadarSweep" Fill="#4000FF00" Stroke="#8000FF00" StrokeThickness="2">
                        <Path.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="radarRotation" Angle="0" CenterX="0" CenterY="0"/>
                                <TranslateTransform x:Name="radarPosition" X="0" Y="0"/>
                            </TransformGroup>
                        </Path.RenderTransform>
                    </Path>
                </Canvas>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Column="1" Background="#FF2D2D2D" Margin="0,10,10,10" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Connection Panel -->
                    <RowDefinition Height="*"/>
                    <!-- Main Controls -->
                </Grid.RowDefinitions>

                <!-- Connection Panel - Always Visible -->
                <Border Background="#FF3D3D3D" CornerRadius="5" Margin="15,15,15,5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Connection Settings" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  Margin="0,0,0,10"/>

                        <!-- Connection Form -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- IP Address -->
                            <TextBlock Text="IP Address:" 
                                      Foreground="White" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox x:Name="IpAddressTextBox" 
                                     Grid.Column="1"
                                     Text="127.0.0.1"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     PreviewTextInput="NumberValidationTextBox"/>

                            <!-- Port -->
                            <TextBlock Text="Port:" 
                                      Grid.Row="1"
                                      Foreground="White" 
                                      VerticalAlignment="Center"
                                      Margin="0,10,10,0"/>
                            <TextBox x:Name="PortTextBox" 
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Text="5762"
                                     Margin="0,10,0,0"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     PreviewTextInput="NumberValidationTextBox"/>

                            <!-- Connection Status -->
                            <StackPanel Grid.Row="2" 
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        Margin="0,15,0,0">
                                <Ellipse x:Name="ConnectionIndicator" 
                                        Width="12" Height="12" 
                                        Fill="Red" 
                                        Margin="0,0,10,0"/>
                                <TextBlock x:Name="ConnectionStatus" 
                                          Text="Disconnected" 
                                          Foreground="White"/>
                            </StackPanel>
                        </Grid>

                        <!-- Connection Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button x:Name="ConnectButton" 
                                    Content="Connect" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            <Button x:Name="DisconnectButton" 
                                    Content="Disconnect" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Width="100"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Main Controls Panel - Fixed Height -->
                <StackPanel Grid.Row="1" Margin="15,5,15,15">
                    <!-- Angle Display -->
                    <Border Background="#FF3D3D3D" CornerRadius="5" Margin="0,5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Angles" FontSize="16" Foreground="White"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Scan H:" Foreground="White" Margin="0,5"/>
                                <TextBlock x:Name="ScanHAngle" Grid.Column="1" Text="0°" 
                                         Foreground="White" Margin="5,5"/>

                                <TextBlock Text="Scan V:" Grid.Row="1" Foreground="White" 
                                         Margin="0,5"/>
                                <TextBlock x:Name="ScanVAngle" Grid.Row="1" Grid.Column="1" 
                                         Text="0°" Foreground="White" Margin="5,5"/>

                                <TextBlock Text="Dir H:" Grid.Row="2" Foreground="White" 
                                         Margin="0,5"/>
                                <TextBlock x:Name="DirHAngle" Grid.Row="2" Grid.Column="1" 
                                         Text="0°" Foreground="White" Margin="5,5"/>

                                <TextBlock Text="Dir V:" Grid.Row="3" Foreground="White" 
                                         Margin="0,5"/>
                                <TextBlock x:Name="DirVAngle" Grid.Row="3" Grid.Column="1" 
                                         Text="0°" Foreground="White" Margin="5,5"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Signal Strength -->
                    <Border Background="#FF3D3D3D" CornerRadius="5" Margin="0,5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Signal Strength" FontSize="16" Foreground="White"/>
                            <Grid Height="100" Margin="0,10">
                                <Rectangle x:Name="SignalBar" Fill="#FF00FF00" 
                                         HorizontalAlignment="Left">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform x:Name="SignalScale"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                            <TextBlock x:Name="SignalStrength" Text="0%" 
                                     FontSize="24" Foreground="White"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Status Message -->
                    <Border Background="#FF3D3D3D" CornerRadius="5" Margin="0,5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Status" FontSize="16" Foreground="White"/>
                            <TextBlock x:Name="StatusMessage" Text="Ready" 
                                     Foreground="White" Margin="0,5"/>
                        </StackPanel>
                    </Border>

                    <!-- Controls -->
                    <Border Background="#FF3D3D3D" CornerRadius="5" Margin="0,5" Padding="10">
                        <StackPanel>
                            <Button x:Name="StartButton" Content="Start Scanning" 
                                    Style="{StaticResource ModernButton}" Margin="0,5"/>
                            <Button x:Name="ResetButton" Content="Reset" 
                                    Style="{StaticResource ModernButton}" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
